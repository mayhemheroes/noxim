FROM --platform=linux/amd64 ubuntu:22.04 as builder

RUN apt-get update
RUN DEBIAN_FRONTEND=noninteractive apt-get install -y build-essential

COPY . /repo
WORKDIR /repo/other
RUN make -j8

RUN mkdir -p /deps
RUN ldd /repo/other/ttable_from_hub | tr -s '[:blank:]' '\n' | grep '^/' | xargs -I % sh -c 'cp % /deps;'

FROM ubuntu:22.04 as package

COPY --from=builder /deps /deps
COPY --from=builder /repo/other/ttable_from_hub /repo/other/ttable_from_hub
ENV LD_LIBRARY_PATH=/deps
